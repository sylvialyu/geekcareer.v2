<h3 class="job_section_title">Edit a Job</h3>

<div class="job_section_description">

<%= simple_form_for [:admin, @job] do |f| %>

<div class="job_section_editnew"><%= f.input :title %></div>
<div class="job_section_editnew"><%= f.input :company_name %></div>
<div class="job_section_editnew"><%= f.input :description %></div>
<div class="job_section_editnew"><%= f.input :location %></div>
<div class="job_section_editnew"><%= f.input :wage_lower_bound, :label => "Minimum Wage" %></div>
<div class="job_section_editnew"><%= f.input :wage_upper_bound, :label => "Maximum Wage" %></div>
<div class="job_section_editnew"><%= f.input :contact_email %></div>
<div class="job_section_editnew">
  <%= f.label :friendly_id %>
  <%= f.text_field :friendly_id, :required => true %>
  <p class="help-block">限小写英文数字及横线，将作为网址的一部分</p>
</div>
<div class="job_section_editnew"><%= f.input :is_hidden %></div>

<div class="text-center">
  <%= f.submit "Submit", class: "btn btn-primary" %>
</div>

<% end %>

</div>
