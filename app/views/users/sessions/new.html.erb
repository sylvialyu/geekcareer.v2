<div class="row bg_bg">
  <div class="col-md-4 col-md-offset-4 bg_bg_box">
  <h2 class="text-center">Login geek career</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <br/>

  <div class="form-actions text-center">
      <%= f.button :submit, "Login", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="text-center">
  <%= link_to("Do not have an account? Register", new_registration_path(resource_name)) %>
</div>

  </div>

</div>
